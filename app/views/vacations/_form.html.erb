<%= form_with(model: vacation) do |form| %>
  <% if vacation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vacation.errors.count, "error") %> prohibited this vacation from being saved:</h2>

      <ul>
        <% vacation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date, readonly: current_user.admin? ? true : false %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date, readonly: current_user.admin? ? true : false %>
  </div>

  <% if vacation.user.present? %>
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, readonly: true %>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <div>
      <%= form.label :status, style: "display: block" %>
      <%= select_tag :status, options_for_select(%w[created reject confirm], selected: 'created', disabled: 'created'), name: 'vacation[status]' %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
