<p style="color: green"><%= notice %></p>

<%= render @vacation %>

<div>
  <% if @vacation.created? %>
    <%= link_to "Edit this vacation", edit_vacation_path(@vacation), class: "btn btn-warning" %> |
  <% end %>
  <%= link_to "Back to vacations", vacations_path, class: "btn btn-secondary" %>

  <%= button_to "Destroy this vacation", @vacation, method: :delete, class: "btn btn-danger" if current_user.admin? %>
</div>
