<p class="text-success"><%= notice %></p>

<h1>Vacations</h1>

<div class="container" id="vacations">
  <% @vacations.each do |vacation| %>
    <%= render vacation %>
    <p>
      <%= link_to "Show this vacation", vacation, class: "btn btn-secondary" %>
    </p>
  <% end %>
</div>

<%= link_to "New vacation", new_vacation_path, class: "btn btn-primary" unless current_user.admin? %>
